<section class="form">

    <div class="form-header">
        <p class="sw">Edit Career for <%= @character.name %></p>
    </div>

    <%= form_for [@character, @character_career] do |f| %>

        <%= f.hidden_field :character_id, value: @character.id %>

        <div class="form-field">
            <%= f.collection_select(:career_id, @careers, :id, :name, {prompt: ""}, {class: "form-input select"}) %>
            <p class="form-label">Career</p>
        </div>

        <%= f.submit "Submit", class: "button form-button success" %>

        <%= link_to [@character, @character_career], method: :delete do %>
            <div class="button danger sw">Delete Career</div>
        <% end %>
    <% end %>

    <p><%= link_to "< View Character", character_path(@character) %></p>
    <p><%= link_to "Add Specialization >", new_character_character_career_path(@character) %></p>

</section>