<section>

    <div class="section-header">
        
        <p>TALENTS 
            <span class="right">
        
                <%= link_to new_talent_path do %>
                    <i class="fas fa-plus"></i>
                <% end %>

            </span>

        </p>

    </div>

    <ul class="admin-talent-list">
    
        <% delimeter = '' %>
        <% @talents.each do |talent| %>
    
            <% if talent.name[0].upcase != delimeter %>
                <% delimeter = talent.name[0].upcase %>
                <p class="sw segmentor"><%= delimeter %></p>
            <% end %>

            <li class="admin-primary"><%= link_to(talent.name, edit_talent_path(talent)) %></li>

        <% end %>

    </ul>

</section>