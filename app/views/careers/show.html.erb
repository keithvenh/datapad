<section>

    <div class="section-header">
        <p>
            <%= @career.name.upcase %>

            <span class="right">
            
                <%= link_to edit_career_path(@career) do %>
                    <i class="fas fa-edit"></i>
                <% end %>

            </span>
        </p>

    </div>

    <div class="subsection-header">
        <p>Skills</p>
    </div>

    <ul>
    
        <% @career.career_skills.each do |skill| %>
    
            <li class="admin-primary"><%= link_to(skill.skill.name, edit_career_career_skill_path(@career, skill)) %></li>

        <% end %>

    </ul>

    <div class="subsection-header">
        <p>Specializations</p>
    </div>

    <ul>
    
        <% @career.specializations.each do |spec| %>
    
            <li class="admin-primary"><%= link_to(spec.name, specialization_path(spec)) %></li>

        <% end %>

    </ul>

</section>